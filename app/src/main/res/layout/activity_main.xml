<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sander.bluetoothapp.MainActivity">

    <Button
        android:text="ON/OFF"
        android:id="@+id/btnONOFF"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="#090b16"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnDiscoverable_on_off"
        android:onClick="btnEnableDisable_Discoverable"
        android:text="Enable Discoverability"

        android:background="#090b16"
        android:textColor="#ffffff"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnONOFF"
        android:layout_alignBottom="@+id/btnONOFF"
        android:layout_toRightOf="@+id/btnONOFF"
        android:layout_toEndOf="@+id/btnONOFF"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/btnFindUnpairedDevices"
        android:text="Discover"
        android:onClick="btnDiscover"

        android:background="#090b16"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDiscoverable_on_off"
        android:layout_alignBottom="@+id/btnDiscoverable_on_off"
        android:layout_toRightOf="@+id/btnDiscoverable_on_off"
        android:layout_toEndOf="@+id/btnDiscoverable_on_off"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <ListView
        android:id="@+id/lvNewDevices"

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp" />

</RelativeLayout>
